                data-control="select2"
                data-placeholder="Phone code"
                data-hide-search="true"
                id="floatingSelect-patient"
                aria-label="Floating label select example"
                required
              >
                <option></option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>

              <div
                class="text-danger fs-7 mt-2 d-none"
                id="floatingSelect-patient-error"
              >
                Phone code is required
              </div>
            </div>

            <!-- Phone Number (Input) -->
            <div class="form-floating mb-7 flex-grow-1">
              <input
                type="tel"
                class="form-control form-control-lg"
                id="floatingInputPhoneNumber"
                placeholder=""
                autocomplete="off"
                maxlength="11"
                pattern="[0-9]{11}"
                inputmode="numeric"
                required
              />
              <label for="floatingInputPhoneNumber">Phone Number</label>
              <div
                class="text-danger fs-7 mt-2 d-none"
                id="floatingInputPhoneNumber-error"
              >
                Phone number must be at least 11 digits
              </div>
            </div>
          </div>

          <!--Start::Passwords-->
          <!-- Password -->
