            class="role-option btn bg-light btn-color-gray-600 btn-active-text-gray-800 border border-3 border-gray-100 border-active-primary p-5 d-flex align-items-center mb-0 active"
            data-kt-button="true"
          >
            <input
              class="btn-check"
              type="radio"
              name="user_role"
              value="patient"
              checked
            />
            <i class="ki-outline ki-user fs-2x pe-0 me-3"></i>
            <span class="d-block fw-semibold text-start">
              <span class="role-title fw-bold fs-5 mb-2"> Patient </span>
            </span>
          </label>

          <!-- Doctor Button -->
